<!DOCTYPE html>
<html>
<head>
  <title>NCAAMb</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <img src="http://www.mybookie.ag/wp-content/themes/MyBookie/img/macrhmadness-myb2.jpg" class="main-image">

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Bracket Genie</a>
      </div>
      <!-- <ul class="nav navbar-nav">
        <li><a href="/comparison">Compare Teams</a></li> 
      </ul> -->
      <ul class="nav navbar-nav navbar-right">
      
      <% if user_signed_in? %>
           <li><a data-method="DELETE" href="users/sign_out"><button class="btn btn-primary btn-xs">Log Out</button></a></li> 
      <% else %>
          <li><a href="/users/sign_in"><button class="btn btn-primary btn-xs js-login">Login</button></a></li>
          <li><a href="/users/sign_up"><button class="btn btn-primary btn-xs">Sign Up</button></a></li>
      <% end %>
      </ul>
    </div>
  </nav>

    
    <div id="login-modal" class="modal fade js-modal">
      <div class="modal-dialog">
        <div class="modal-content">

          <div class="modal-header">
            <!-- Close button -->
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span>&times;</span>
            </button>

            <h2>Log In</h2>
          </div>

          <div class="modal-body">  
            <%= render 'devise/sessions/new'   %>
          </div>

          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
      </div><!-- End Login Modal -->
  <%= yield %>

</body>
</html>
